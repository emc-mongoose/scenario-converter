{
	"type": "sequential",
	"config": {
		"test": {
			"step": {
				"limit": {
					"count": 100
				}
			}
		},
		"load": {
			"limit": {
				"concurrency": 2
			}
		},
		"storage": {
			"driver": {
				"type": "fs"
			}
		}
	},
	"steps": [
		{
			// write new data
			"type": "precondition",
			"config": {
				"item": {
					"output": {
						"file": "fs-verify-updated-0.csv",
						"path": "fs-verify-updated"
					}
				}
			}
		}, {
			// update the written data
			"type": "precondition",
			"config": {
				"item": {
					"data": {
						"ranges": {
							// update 10 random byte ranges per request
							"random": 10
						}
					},
					"input": {
						"file": "fs-verify-updated-0.csv"
					},
					"output": {
						"file": "fs-verify-updated-1.csv"
					}
				},
				"load": {
					"type": "update"
				}
			}
		}, {
			// verify the updated data
			"type": "load",
			"config": {
				"item": {
					"input": {
						"file": "fs-verify-updated-1.csv"
					}
				},
				"load": {
					"type": "read"
				}
			}
		}
	]
}
